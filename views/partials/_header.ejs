<header>
  <nav class="navbar navbar-inverse navbar-expand-md navbar-dark bg-success">
    <a class="navbar-brand" href="/urls">TinyApp</a>
    <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarNavAltMarkup"
      aria-controls="navbarNavAltMarkup" aria-expanded="false" aria-label="Toggle navigation">
      <span class="navbar-toggler-icon"></span>
    </button>
    <div class="collapse navbar-collapse" id="navbarNavAltMarkup">
      <div class="navbar-nav">
        <a class="nav-item nav-link" href="/urls">My URLs</a>
        <a class="nav-item nav-link" href="/urls/new">Create New URL</a>
      </div>
    </div>
    <% if(user){ %>
    <ul class="nav navbar-nav navbar-right">
      <li style="margin: 1.5em">Logged In As: <%= user.email%></li>
      <li>
        <form class="form-inline" action="/logout" method="POST">
          <button class="btn btn-outline-light" type="submit" style="margin: 1em">Logout</button>
        </form>
      </li>
    </ul>
    <% } else{ %>
    <ul class="nav navbar-nav navbar-right">
      <li>
        <form class="form-inline" method="GET" action="/register"><button class="btn btn-light" name="register"
            style="margin: 1em">Register</button></form>
      </li>
      <li>
        <form class="form-inline" method="GET" action="/login"><button class="btn btn-light" name="login"
            style="margin: 1em">Login</button></form>
      </li>
    </ul>
    <% } %>
  </nav>
</header>